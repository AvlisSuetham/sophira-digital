    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // Slider de depoimentos
            const testimonialItems = document.querySelectorAll('.testimonial-item');
            let currentTestimonialIndex = 0;
            if (testimonialItems.length > 1) {
                function showNextTestimonial() {
                    testimonialItems[currentTestimonialIndex].classList.remove('active');
                    currentTestimonialIndex = (currentTestimonialIndex + 1) % testimonialItems.length;
                    testimonialItems[currentTestimonialIndex].classList.add('active');
                }
                setInterval(showNextTestimonial, 6000);
            }

            // Scroll Reveal
            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animated');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });

            const animatedElements = document.querySelectorAll('.slide-up, .fade-in');
            animatedElements.forEach(el => observer.observe(el));

        });
    </script>

